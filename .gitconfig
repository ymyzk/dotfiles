[include]
    path = ~/.gitconfig.local

[merge]
    ff = false

[pull]
    rebase = true

[color]
    ui = auto

[core]
    editor      = vim
    quotepath   = false
    pager       = less -R
    excludesfile    = ~/.gitignore_global

[alias]
    a       = add
    ap      = add -p
    br      = branch
    cl      = clone
    cm      = commit -v
    co      = checkout
    # cob     = checkout -b
    # com     = checkout master
    df      = diff
    dfc     = diff --cached
    dfs     = diff -C --stat
    gca     = gc --aggressive
    pl      = pull
    ps      = push
    pst     = push --tags
    sh      = show
    sm      = submodule
    smst    = submodule status
    smsync  = submodule sync
    st      = status
    swc     = switch -c
    swm     = switch master
    l       = log
    lg      = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative
    lga     = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative
    lsu     = ls-files -o --exclude-standard
    show-ignored = ls-files --exclude-standard --others --ignored

[diff]
    # Git 2.9.0+
    compactionHeuristic = true
    # Git 2.15+
    colorMoved = default

[diff "utf-16"]
    textconv = iconv -f utf-16 -t utf-8

[filter "hawser"]
    clean       = git hawser clean %f
    smudge      = git hawser smudge %f
    required    = true

[filter "lfs"]
    clean       = git-lfs clean %f
    smudge      = git-lfs smudge %f
    required    = true

[filter "media"]
    clean       = git media clean %f
    smudge      = git media smudge %f
    required    = true

[ghq]
    root = ~/Development
